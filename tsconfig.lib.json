{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["ES2015"],
    "useDefineForClassFields": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "downlevelIteration": true
  },
  "include": [
    "./src/**/*.ts",
  ],
}